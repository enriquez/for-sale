<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-GB">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>Admin Area</title>
	<%= stylesheet_link_tag "web_app_theme/base", "web_app_theme/default", "web_app_theme/override", :cache => true %>
	<!--[if IE]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.pack.js"></script><![endif]-->
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" type="text/javascript"></script>
	<%= javascript_include_tag 'jquery.flot.pack.js', 'swfupload', 'upload', 'application' %>

	<%= yield :javascripts %>
</head>

<body id="<%= controller_body_id %>">
	<div id="container">
		<div id="header">
			<h1><%= link_to "Admin Area", "#" %></h1>
      <div id="user-navigation">
				<ul>
					<li><%= link_to "Logout", logout_path %></li>
					<li><%= link_to "View Website", "/" %></li>
				</ul>
        <div class="clear"></div>
			</div>
			<div id="main-navigation">
				<ul>
					<%= main_navigation_li("Products", admin_products_path, :class => "first", :controller => "products") %>
				</ul>
        <div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
		
		<div id="wrapper">
			<div id="main">
				<%= yield %>
				
				<div id="footer">
					<div class="block">
						<p>Developed by Floencode</p>
					</div>
				</div>
			</div>
			
      <div id="sidebar">
				<%= yield :sidebar %>
      </div>
      <div class="clear"></div>
		</div>
	</div>	
</body>
</html>
