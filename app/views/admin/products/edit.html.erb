<% main_block("Edit a Product", navigation_items) do %>

<% form_for [:admin, @product], :html => { :class => "form" } do |product| %>
	<%= validation_error_flash @product %>
	<%= render :partial => 'form', :locals => { :product => product } %>
	<%= form_button product, :button_text => "Update", :cancel_path => admin_products_path %>
<% end %>

<% end %>

